<%= provide(:title, @organization.name) %>

<div class="row">
	<aside class="col-md-4">
		<div class="fixed">
			<%= render 'shared/small_profile' %>
		</div>
	</aside>

	<div class="col-md-8">
		<h1><%= @organization.name %></h1>
		<h2 class="original-website link-transition">Visit their website at: <%= link_to @organization.url, @organization.url, :target => "_blank" %></h2>
		
		<div class="favoritize">
			<%= render 'favorite_form' if logged_in? %>
		</div>

		<ul class="organization-x">
			<li>
				<span class="org-link">
					<%= link_to "News", organization_articles_path(@organization) %> (<%= @organization.articles.count %>)
				</span>
			</li>
		</ul>
	</div>
</div>