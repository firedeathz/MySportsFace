<% unless current_user.favorite_organizations.exists?(id: @organization.id) %>
<%= link_to 'Add Favorite', favorite_organizations_path(organization_id: @organization), method: :post, class: 'btn btn-primary' %>
<% else %>
<%= link_to 'Remove Favorite', favorite_organization_path(@organization), method: :delete, class: 'btn btn-primary' %>
<% end %>