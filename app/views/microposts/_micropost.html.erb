<% if current_user != micropost.user || content_for(:title) == "Profile" %>
<li id="micropost-<%= micropost.id %>">
<% else %>
<li id="micropost-<%= micropost.id %>" class="other-user-li">
<% end %>
  <%= link_to gravatar_for(micropost.user), micropost.user %>
  <span class="user">
	<%= link_to micropost.user.name, micropost.user, class: 'add-transition' %>
	<% if current_user.voted_on?(micropost) %>
		<div class="star-form">
			<%= micropost.votes_for %>
			<%= link_to(content_tag("span", "", class: "star-empty"), unstar_micropost_path(micropost), :method => :post) %>
		</div>
	<% else %>
		<div class="star-form">
			<%= micropost.votes_for %>
			<%= link_to(content_tag("span", "", class: "star-full"), star_micropost_path(micropost), :method => :post) %>
		</div>
	<% end %>
  </span>
  <span class="timestamp">
	posted <%= time_ago_in_words(micropost.created_at) %> ago.
	<% if current_user?(micropost.user) %>
		<%= link_to "delete", micropost, method: :delete,
										 data: { confirm: "Are you sure you want to delete this post?" } %>
	<% end %>
  </span>
  <span class="content">
	<%= micropost.content %>
	<%= image_tag micropost.picture.url if micropost.picture? %>	
  </span>
  <span>
	
  </span>
</li>