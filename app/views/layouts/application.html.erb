<!DOCTYPE html>
<html>
	<head>
		<title><%= full_title(yield(:title)) %></title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application' %>
		<%= csrf_meta_tags %>
		<%= favicon_link_tag %>
		<%= render 'layouts/shim' %>
	</head>
	
	<body>
		<%= render 'layouts/header' %>
		<div class="container extra">
			<% flash.each do |message_type, message| %>
				<%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
			<% end %>
			<%= yield %>
			<%= render 'layouts/footer' %>
		</div>
		<script src="/assets/jquery.min.js"></script>	
		<script src="/assets/jquery.cycle.all.js"></script>
		<script src="/assets/grid.js"></script>
		<script src="/assets/jquery.ui.widget.js"></script>
		<script src="/assets/jquery-ui.min.js"></script>
		<script src="/assets/z.jquery.fileupload.js"></script>
		<script src="/assets/nice-edit.js"></script>
		<script type="text/javascript">
			bkLib.onDomLoaded(nicEditors.allTextAreas);
		</script>
		<script>
			$(function() {
				Grid.init();
			});
		</script>
	</body>
</html>