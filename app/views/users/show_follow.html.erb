<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <% if current_user.id == @user.id %>
		<span><%= link_to "Settings", edit_user_path(@user) %></span>
	  <% end %>	
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
	<% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to mini_gravatar_for(user), user %>
          <% end %>
        </div>
    <% end %>
  </aside>
  <div class="col-md-8">
   	<%= link_to "Back to profile", user_path(@user), class: "btn btn-primary" %>
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>