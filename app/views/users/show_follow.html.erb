<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
	<div class="fixed">
		<%= render 'shared/small_profile' %>
		<% if @users.any? %>
			<div class="user_avatars">
			  <% @users.each do |user| %>
				<%= link_to mini_gravatar_for(user), user %>
			  <% end %>
			</div>
		<% end %>
	</div>
  </aside>
  <div class="col-md-8">
    <h1><%= @title %></h1>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>