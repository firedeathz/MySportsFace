<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
	<div class="fixed">
		<section class="user_info">
		  <%= link_to gravatar_for(@user), @user %>
		  <h1 class="username"><%= link_to @user.name, @user %></h1>
		  <% if current_user.id == @user.id %>
			<span><%= link_to "Settings", edit_user_path(@user) %></span>
		  <% end %>	
		</section>
		<section class="stats">
		  <%= render 'shared/stats' %>
		</section>
	</div>
  </aside>
  <div class="col-md-8">
   	<%= link_to "Back to profile", user_path(@user), class: "margin-top btn btn-primary" %>
	<h3>Signed up for (<%= @events.count %>)</h3>
    <% if @events.any? %>
      <ul class="events">
        <%= render @events %>
      </ul>
    <% end %>
  </div>
</div>