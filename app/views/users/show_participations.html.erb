<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <% if current_user.id == @user.id %>
		<span><%= link_to "Settings", edit_user_path(@user) %></span>
	  <% end %>	
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
   	<%= link_to "Back to profile", user_path(@user), class: "margin-top btn btn-primary" %>
	<h3>Signed up for (<%= @events.count %>)</h3>
    <% if @events.any? %>
      <ul class="events">
        <%= render @events %>
      </ul>
    <% end %>
  </div>
</div>