<% provide(:title, 'Profile') %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
	  <% if current_user == @user %>
		<span><%= link_to "Settings", edit_user_path(current_user) %></span>
	  <% end %>
    </section>
	<section class="stats">
		<%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
	<%= render 'shared/events' %>
    <h3>Posts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  </div>  
</div>