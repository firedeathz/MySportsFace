<%= form_for([@event, @picture], html: { multipart: true }) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	
	<%= f.file_field :url, accept: 'image/jpeg,image/gif,image/png', :required => true %>

	<%= f.submit "Upload Photo", class: "btn btn-primary" %>
	<h3><small><i class="glyphicon glyphicon-exclamation-sign"></i> Accepted formats are .jpg, .jpeg, .gif and .png</small></h3>
	<h3><small><i class="glyphicon glyphicon-exclamation-sign"></i> Maximum size: 4 Megabytes (MB)</small></h3>
<% end %>