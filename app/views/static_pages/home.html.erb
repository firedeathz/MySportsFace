<% provide(:title, "Home") %>
<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<div class="fixed">
				<section class="user_info">
					<%= render 'shared/user_info' %>
				</section>
				<section class="stats">
					<%= render 'shared/stats' %>
				</section>
				<section class="micropost_form">
					<%= render 'shared/micropost_form' %>
				</section>
			</div>
		</aside>
		<div class="col-md-8">
			<h3>Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="center jumbotron">
		<div class="backpic">
		  <h1>Welcome to MySportsFace</h1>

		  <h2>Browse your favorite sports organizations and check their news and events!</h2>

		  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
		  <h2>Already have an account? <%= link_to "Log in here!", login_path %></h2>
		</div>
	</div>
<% end %>